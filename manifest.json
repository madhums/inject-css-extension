{
  "manifest_version": 3,
  "name": "Site CSS Injector",
  "version": "1.0",
  "description": "Inject custom CSS into specific sites easily.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Inject CSS"
  },
  "background": {
    "service_worker": "storage.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
